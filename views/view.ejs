<%- include('partials/messages') %>

<div class="card">
  <h2 class="card-title"><%= metadata.title || 'Untitled Blog Post' %></h2>
  
  <div class="metadata-section">
    <div class="metadata-item">
      <span class="metadata-label">Source:</span>
      <a href="<%= metadata.url %>" target="_blank"><%= metadata.url %></a>
    </div>
    <div class="metadata-item">
      <span class="metadata-label">Retrieved:</span>
      <%= new Date(metadata.date).toLocaleString() %>
    </div>
    <% if (metadata.author) { %>
      <div class="metadata-item">
        <span class="metadata-label">Author:</span>
        <%= metadata.author %>
      </div>
    <% } %>
  </div>
  
  <div class="blog-content">
    <%= content %>
  </div>
  
  <div style="margin-top: 20px;">
    <a href="/" class="btn" style="background-color: #007bff; color: white; padding: 5px 10px; text-decoration: none; border-radius: 4px; display: inline-block;">&larr; Back to Home</a>
  </div>
</div>
