<%- include('partials/messages') %>

<div class="card">
  <h2 class="card-title">Repository Status</h2>
  
  <div class="status-section">
    <h3>Current Branch</h3>
    <p><%= status.current || 'Not available' %></p>
  </div>
  
  <div class="status-section">
    <h3>Tracking</h3>
    <p><%= status.tracking || 'Not tracking any remote branch' %></p>
  </div>
  
  <div class="status-section">
    <h3>Files Not Added (Untracked)</h3>
    <% if (status.files.not_added && status.files.not_added.length > 0) { %>
      <ul class="status-list">
        <% status.files.not_added.forEach(file => { %>
          <li class="status-item"><%= file %></li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>No untracked files</p>
    <% } %>
  </div>
  
  <div class="status-section">
    <h3>Modified Files</h3>
    <% if (status.files.modified && status.files.modified.length > 0) { %>
      <ul class="status-list">
        <% status.files.modified.forEach(file => { %>
          <li class="status-item"><%= file %></li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>No modified files</p>
    <% } %>
  </div>
  
  <div class="status-section">
    <h3>Staged Files</h3>
    <% if (status.files.staged && status.files.staged.length > 0) { %>
      <ul class="status-list">
        <% status.files.staged.forEach(file => { %>
          <li class="status-item"><%= file %></li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>No staged files</p>
    <% } %>
  </div>
  
  <div class="status-section">
    <h3>Git Commands</h3>
    <p>Use the following Git commands to manage your repository:</p>
    <pre>
# Add all files to staging
git add .

# Commit changes
git commit -m "Your commit message"

# Push to remote repository (if configured)
git push
    </pre>
  </div>
  
  <div style="margin-top: 20px;">
    <a href="/" class="btn" style="background-color: #007bff; color: white; padding: 5px 10px; text-decoration: none; border-radius: 4px; display: inline-block;">&larr; Back to Home</a>
  </div>
</div>
